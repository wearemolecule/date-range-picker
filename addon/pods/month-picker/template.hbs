<div class="dp-month-picker">
  {{#basic-dropdown verticalPosition="below"
                    registerAPI=(action (mut dropdownController))
                    initiallyOpened=initiallyOpened
                    renderInPlace=true
                    as |dropdown|}}
    {{#dropdown.trigger tabindex=tabIndex
                        onFocus=(action "openDropdown")
                        onKeydown=(action "tabCloseDropdown")}}
      {{range-input-mask value=rangeFormatted
                         mask="9[9]/99[99]â€”9[9]/99[99]"
                         class="dp-date-input"
                         key-press="parseInput"}}
    {{/dropdown.trigger}}
  
    {{#dropdown.content class="dp-panel"
                        to="dp-month-picker"}}
      <div class="dp-display-month-year">
        {{month-display startDate=startDate
                        month=startDate
                        isExpanded=leftMonthIsExpanded}}

        {{year-display startDate=startDate
                       month=startDate
                       isExpanded=leftYearIsExpanded
                       yearWasSelected="toggleLeftYearExpanded"}}

      </div>

      <div class="dp-display-month-year">
        {{month-display startDate=endDate
                        month=endDate
                        isExpanded=rightMonthIsExpanded
                        endOfMonth=true}}

        {{year-display startDate=endDate
                       month=endDate
                       isExpanded=rightYearIsExpanded
                       yearWasSelected="toggleRightYearExpanded"}}
      </div>

      <div class="dp-action-console">
        {{#if showClear}}
        <button {{action "clear"}} class="dp-clear">Clear</button>
        {{/if}}
        <button {{action "cancel"}} class="dp-cancel">Cancel</button>
        <button {{action "apply"}} class="dp-apply">Apply</button>
      </div>
    {{/dropdown.content}}
  {{/basic-dropdown}}
</div>
