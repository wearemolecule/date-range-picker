<div class="dp-month-picker">
  {{#if showInput}}
    {{range-input-mask value=rangeFormatted
                       mask="9[9]/99[99]â€”9[9]/99[99]"
                       class="dp-date-input"
                       focus-in="toggleIsExpanded"
                       key-press="parseInput"
                       tabindex=tabIndex}}
  {{/if}}

  {{#if isExpanded}}
    <div class="dp-panel">
      <div class="dp-display-month-year">
        {{month-display startDate=startDate
                        month=startDate
                        isExpanded=leftMonthIsExpanded}}

        {{year-display startDate=startDate
                       month=startDate
                       isExpanded=leftYearIsExpanded
                       yearWasSelected="toggleLeftYearExpanded"}}

      </div>

      <div class="dp-display-month-year">
        {{month-display startDate=endDate
                        month=endDate
                        isExpanded=rightMonthIsExpanded
                        endOfMonth=true}}

        {{year-display startDate=endDate
                       month=endDate
                       isExpanded=rightYearIsExpanded
                       yearWasSelected="toggleRightYearExpanded"}}
      </div>

      <div class="dp-action-console">
        {{#if showClear}}
        <button {{action "clear"}} class="dp-clear" tabindex={{actionTabIndex}}>Clear</button>
        {{/if}}
        <button {{action "cancel"}} class="dp-cancel" tabindex={{actionTabIndex}}>Cancel</button>
        <button {{action "apply"}} class="dp-apply" tabindex={{actionTabIndex}}>Apply</button>
      </div>
    </div>
  {{/if}}
</div>
