<button class="btn-year {{if isExpanded 'active'}}" {{action "toggleIsExpanded"}}>
  {{moment-format month "YYYY"}}
</button>

{{#if isExpanded}}
  {{#ember-wormhole to="year-display-buttons"}}
    <div class="year">
      {{#each allYears as |year|}}
        <button {{action "setYear" year}}>{{year}}</button>
      {{/each}}
    </div>
  {{/ember-wormhole}}
{{/if}}