<div class="dp-calendar-header">
  <button class="dp-previous-month" {{action "prevMonth"}}/>
    {{month-display month=month
                    isExpanded=monthIsExpanded
                    monthWasSelected='toggleMonthExpanded'}}
    
    {{year-display startDate=selectionStart
                   month=month
                   onlyUpdateMonth=true
                   isExpanded=yearIsExpanded
                   yearWasSelected='toggleYearExpanded'}}
    
  <button class="dp-next-month" {{action "nextMonth"}}/>
</div>

<div class="dp-calendar-body">
  {{#if calendarExpanded}}
    {{#each weeks as |week|}}
      <div class="dp-week">
        {{#each week as |day|}}
          {{day-display selectionStart=selectionStart
                        selectionEnd=selectionEnd
                        day=day
                        month=month
                        daySelected="daySelected"}}
        {{/each}}
      </div>
    {{/each}}
  {{/if}}
</div>
